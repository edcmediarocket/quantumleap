
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin settings can only be read/written by the specific admin UID
    match /adminSettings/featureToggles {
      allow read, write: if request.auth != null && request.auth.uid == 'qRJOtYXWqLbpQ1yx6qRdwSGwGyl1';
    }

    // Example: Allow users to read/write their own data in a 'users' collection
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }

    // Default deny all other reads/writes
    // It's important to explicitly define rules for all collections your app uses.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
