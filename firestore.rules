
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin settings for feature toggles
    // Allow public read so the app can fetch toggles for all users
    // Restrict write access to the specific admin UID
    match /adminSettings/featureToggles {
      allow read: if true; // All users can read
      allow write: if request.auth != null && request.auth.uid == 'qRJOtYXWqLbpQ1yx6qRdwSGwGyl1'; // Only admin can write
    }

    // This is a default rule, denying all access to any other collections
    // Add rules for other collections your app uses above this line
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
